{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "build"]
}
